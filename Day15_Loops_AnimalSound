print("Animal Sounds!!")
print("Hello!")

exit = ''

while exit!='yes':
  print("Choices are: Cow, Dog, Cat, Sheep, Horse, Pig, Duck, Chicken")
  sound=input("What animal sound do you want?: ").lower()
  if sound=="cow":
    print('🐮 MOO')
  elif sound=="dog":
    print('🐶 WOOF')
  elif sound=="cat":
    print('🐱 MEOW')
  elif sound=="pig":
    print('🐷 OINK')
  elif sound=="sheep":
    print('🐑 BAA')
  elif sound=="duck":
    print('🦆 QUACK')
  elif sound=="chicken":
    print('🐔  Cluck')
  elif sound=="horse":
    print('🐴 Neigh')
  else:
    print('Sorry, I don\'t know that animal sound')
  exit = input("Do you want to exit? (yes/no): ")
